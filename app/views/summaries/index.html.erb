<h1>Summaries</h1>  

<div class="row">
  <div class="col-md-8">
    <% @summaries.each do |summary| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to summary.post.title, [summary.post.topic, summary.post] %>
          </h4>
          <small>
            <%= summary.body %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
  </div>
</div>
