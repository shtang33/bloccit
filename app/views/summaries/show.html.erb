 <h1><%= @summary.name %></h1>
 
 <% if policy(@summary).update? %>
   <%= link_to "Edit Summary", edit_summary_path, class: 'btn btn-success' %>
 <% end %>
 
 <div class="row">
   <div class="col-md-8">
     <p class="lead"><%= @summary.body %></p>

       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to @post.title, topic_post_path(@post.topic, @post) %>
           </h4>
         </div>
       </div>

   </div>
   <div class="col-md-4">
     <% if policy(Post.new).create? %>
       <%= link_to "New Post", new_post_path(@topic), class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>