<%-# Important to pass on local variable, instead of instance variable starts with @-%>
<%= form_for [@post, @post.comments.new], remote: true do |f| %>

  <% if @post.comments.new.errors.any? %>
    <div class = "alert alert-danger">
      <h4>There are <%= pluralize(post.comments.new.errors.count, "error") %>.</h4>
      <ul>
        <% post.comments.new.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div> 
  <% end %>  

  <%= form_group_tag(@post.comments.new.errors[:body]) do %>
    <%= f.label 'Have comments?'%>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: 'Enter comments'%>
  <% end %>
  <div class = "form-group">
    <%= f.submit "Save", class: 'btn-btn-success', onsubmit: "return blocmetrics('comment')" %>
  </div>
<% end %>